<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="rooms">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="room" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="room_id" type="xs:int"/>
                            <xs:element name="hotel_id" type="xs:int"/>
                            <xs:element name="room_type_id" type="xs:int"/>
                            <xs:element name="room_number" type="xs:string"/>
                            <xs:element name="price_per_night" type="xs:decimal"/>
                            <xs:element name="availability_status" type="xs:boolean"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>